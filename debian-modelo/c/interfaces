# Arquivo /etc/network/interfaces personalizado

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# Primeira interface de rede - Acesso a internet
auto enp0s3
iface enp0s3 inet dhcp

# Segunda interface de rede - Rede interna
auto enp0s8
iface enp0s8 inet static
  address 192.168.56.100/24
  #gateway 192.168.56.1
  #dns-search _DNS-SERVER-NAME_
  #dns-nameservers _DNS-SERVER-1_ _DNS-SERVER-2_

# Terceira interface de rede - Rede host-only
auto enp0s9
iface enp0s9 inet dhcp
